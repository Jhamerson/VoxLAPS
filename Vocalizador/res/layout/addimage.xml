<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/Nome"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/name"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Name"
        android:text="Texto"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Name"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/text"
        android:ems="10" />
    
    <TextView
         android:id="@+id/tela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Text"
        android:text="Tela:"
        android:textAppearance="?android:attr/textAppearanceLarge" />
   
    <RadioGroup
        android:id="@+id/opcoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Text"
        android:layout_alignTop="@+id/tela"
        android:orientation="horizontal" >
   
        <RadioButton
            android:id="@+id/prin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Principal" />

        <RadioButton
            android:id="@+id/est"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estou" />

        <RadioButton
            android:id="@+id/perg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pergunta" />

        <RadioButton
            android:id="@+id/quero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quero" />

        <RadioButton
            android:id="@+id/comer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comer" />

        <RadioButton
            android:id="@+id/beber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beber" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imagePreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/content_remove" />
	<!-- Call new activity -->
    <Button
        android:id="@+id/tphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:onClick="buttonTPhoto"
        android:text="Nova Imagem" />

    <!-- Save in DB -->
    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tphoto"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:onClick="buttonSave"
        android:text="Salvar" />

    

</RelativeLayout>
